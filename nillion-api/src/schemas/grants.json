{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grants Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "project_id": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "name": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "desc": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "links": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "image_url": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "owner_address": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "members": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "user_email": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "user_name": {
        "type": "object",
        "properties": {
          "%share": {
            "type": "string"
          }
        },
        "required": ["%share"]
      },
      "grants": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "name": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "desc": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "applied_at": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            }
          },
          "required": ["id", "name", "desc", "applied_at"]
        }
      },
      "milestones": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "grant_id": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "name": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "desc": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            },
            "created_at": {
              "type": "object",
              "properties": {
                "%share": {
                  "type": "string"
                }
              },
              "required": ["%share"]
            }
          },
          "required": ["id", "grant_id", "name", "desc", "created_at"]
        }
      }
    },
    "required": [
      "_id",
      "project_id",
      "name",
      "desc",
      "links",
      "image_url",
      "owner_address",
      "members",
      "user_email",
      "user_name",
      "grants",
      "milestones"
    ]
  }
}
