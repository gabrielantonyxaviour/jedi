{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Stories Collection",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "name": {
        "type": "string"
      },
      "desc": {
        "type": "string"
      },
      "owners": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "image_url": {
        "type": "string",
        "format": "uri"
      },
      "ipa": {
        "type": "string"
      },
      "parent_ipa": {
        "type": "string"
      },
      "remix_license_terms": {
        "type": "string",
        "enum": ["commercial", "non-commercial"]
      },
      "register_tx_hash": {
        "type": "string"
      }
    },
    "required": [
      "_id",
      "name",
      "desc",
      "owners",
      "image_url",
      "ipa",
      "parent_ipa",
      "remix_license_terms",
      "register_tx_hash"
    ],
    "additionalProperties": true
  }
}
