{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Leads Collection",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "name": {
        "type": "string"
      },
      "source": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "metadata": {
        "type": "object"
      }
    },
    "required": ["_id", "name", "source", "description", "metadata"],
    "additionalProperties": true
  }
}
