{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Socials Collection",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "twitter": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "email": {
            "type": "object",
            "properties": {
              "%allot": {
                "type": "string"
              }
            },
            "required": ["%allot"]
          },
          "password": {
            "type": "object",
            "properties": {
              "%allot": {
                "type": "string"
              }
            },
            "required": ["%allot"]
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "action": {
                  "type": "string",
                  "enum": ["tweet", "reply", "like", "retweet", "quote"]
                },
                "ref_id": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                }
              },
              "required": ["id", "action", "text"]
            }
          }
        },
        "required": ["username", "email", "password", "actions"]
      }
    },
    "required": ["_id"],
    "additionalProperties": false
  }
}
