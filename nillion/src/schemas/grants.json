{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Grants Collection",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "_id": {
        "type": "string",
        "format": "uuid",
        "coerce": true
      },
      "name": {
        "type": "string"
      },
      "desc": {
        "type": "string"
      },
      "links": {
        "type": "array",
        "items": {
          "type": "string",
          "format": "uri"
        }
      },
      "image_url": {
        "type": "string",
        "format": "uri"
      },
      "owner": {
        "type": "string"
      },
      "members": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "user_email": {
        "type": "object",
        "properties": {
          "%allot": {
            "type": "string"
          }
        },
        "required": ["%allot"]
      },
      "user_name": {
        "type": "string"
      },
      "grants": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "desc": {
              "type": "string"
            },
            "applied_at": {
              "type": "number"
            },
            "milestones": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "desc": {
                    "type": "string"
                  },
                  "created_at": {
                    "type": "number"
                  }
                },
                "required": ["id", "name", "desc", "created_at"]
              }
            }
          },
          "required": ["id", "name", "desc", "applied_at", "milestones"]
        }
      }
    },
    "required": [
      "_id",
      "name",
      "desc",
      "links",
      "image_url",
      "owner",
      "members",
      "user_email",
      "user_name",
      "grants"
    ],
    "additionalProperties": true
  }
}
